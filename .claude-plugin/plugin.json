{
  "name": "gitforms-assistant",
  "version": "1.1.0",
  "description": "The ethical form tool for Claude Code. Privacy-first, open-source contact forms using GitHub Issues. No tracking, no vendor lock-in, genuinely free forever.",
  "author": {
    "name": "Luigi Greco",
    "email": "l.greco77@gmail.com"
  },
  "license": "CC-BY-NC-SA-4.0",
  "homepage": "https://github.com/Luigigreco/gitforms",
  "repository": {
    "type": "git",
    "url": "https://github.com/Luigigreco/gitforms-claude-plugin"
  },
  "bugs": {
    "url": "https://github.com/Luigigreco/gitforms-claude-plugin/issues"
  },
  "keywords": [
    "forms",
    "contact-form",
    "lead-capture",
    "lead-generation",
    "github-issues",
    "privacy-first",
    "open-source",
    "free",
    "serverless",
    "self-hosted",
    "no-tracking",
    "gdpr",
    "developer-tools",
    "zero-cost",
    "ethical"
  ],
  "category": "productivity",
  "pricing": "free",
  "screenshots": [
    "https://raw.githubusercontent.com/Luigigreco/gitforms/main/screenshots/form-creation.png",
    "https://raw.githubusercontent.com/Luigigreco/gitforms/main/screenshots/contact-management.png",
    "https://raw.githubusercontent.com/Luigigreco/gitforms/main/screenshots/lead-analysis.png"
  ],
  "configuration": {
    "gitforms_repo": {
      "type": "string",
      "description": "GitHub repository for form submissions (format: owner/repo)",
      "required": true,
      "default": "",
      "example": "Luigigreco/contact-submissions"
    },
    "gitforms_branch": {
      "type": "string",
      "description": "Branch to use for submissions",
      "required": false,
      "default": "main"
    }
  }
}
